<!-- Thêm thư viện -->
@model PagedList.IPagedList<ProjectFinally.Areas.AdminPage.Models.TAIKHOAN>
@using PagedList.Mvc;
@{
    Layout = "~/Areas/AdminPage/Views/AdminPage/Index.cshtml";
}

<!-- Kết thúc-->
<!DOCTYPE html>
<link href="~/Areas/AdminPage/Content/css/bootstrap-theme.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Thông tin khách hàng</title>
</head>
<body>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Dashboard</h1>
            </div>
        </div>

        <div class="row">
            <ol class="breadcrumb">
                <li>
                    <a href="#">
                        <em class="fa fa-user"></em>
                    </a>
                </li>
                <li class="active">Thông tin người dùng</li>
            </ol>
        </div>
        <p class="alignCenter">
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table" align="right">
            <tr>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>
                    EmailAddress
                </th>
                <th>
                    Password
                </th>

            </tr>


            @foreach (var item in Model)
            {
                <tr>
                    <td s>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.maTK }) |
                        @Html.ActionLink("Details", "Details", new { id = item.maTK }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.maTK })
                    </td>
                </tr>
            }

        </table>
        <!-- Thêm mã phân trang -->
        <br />
        <p class="alignCenter">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page }))
        </p>
        <!-- Kết thúc -->

    </div>
    
</body>
</html>
