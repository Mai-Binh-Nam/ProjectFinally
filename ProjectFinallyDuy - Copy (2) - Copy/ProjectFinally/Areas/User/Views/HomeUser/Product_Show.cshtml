@model PagedList.PagedList<ProjectFinally.Models.SANPHAM>
@foreach (var item in Model)
{
    <div class="col-sm-4">
        <div class="product-image-wrap">
            <div class="single-products">
                <div class="productinfo text-center">
                    <img src=@Url.Content("Content/images/home/" + @item.imageSP + "") alt="" height="222" width="230">
                    <p>@item.tenSP</p>
                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                </div>
                <div class="product-overlay">
                    <div class="overlay-content">
                        <h2>@item.dongiaSP</h2>
                        <p>@item.tenSP</p>
                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>

}

<div class="pageIndexs">
    @for (int i = 1; i <= Model.PageCount; i++) //pagecount là số lượng các trang
    {
        if (i == Model.PageNumber) //pagenumber là pageindex
        {
            <span data-id="@i" style="color:snow" id="pageIndex" class="pageIndex">@i</span>
            //kiểm tra đang ở trang nào thì chỉ số nó hiện màu trắng để phân biệt
        }
        else
        {
            <span data-id="@i" style="color:orange" id="pageIndex" class="pageIndex">@i</span>

        }
    }

    <style>
        .pageIndexs {
            padding: 20px 0 0 50px;
        }

            .pageIndexs span {
                margin-left: 10px;
                background: orangered;
                padding: 10px;
                cursor: pointer;
            }
    </style>
</div>
<script>
    $(function () {
        $('span#pageIndex').click(function () {
            var pageIndex = $(this).text();
            var maloai = $('.maloai').data('id');
            LoadProduct(maloai, pageIndex)
        });
    });
</script>